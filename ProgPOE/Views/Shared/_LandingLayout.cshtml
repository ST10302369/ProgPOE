<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AGRI-CONNECT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProgPOE.styles.css" asp-append-version="true" />
    <!-- Add Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <style>
        /* Landing page specific styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
        }

        .landing-hero {
            background-image: url('https://images.pexels.com/photos/2933243/pexels-photo-2933243.jpeg');
            background-size: cover;
            background-position: center;
            position: relative;
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.4); /* Reduced opacity for less blur */
        }

        .navbar-landing {
            background-color: transparent !important;
            position: absolute;
            width: 100%;
            z-index: 100;
            padding: 1rem 0;
        }

            .navbar-landing .navbar-brand {
                color: white;
                font-weight: 700;
                font-size: 1.75rem;
            }

            .navbar-landing .nav-link {
                color: rgba(255, 255, 255, 0.9);
                font-weight: 500;
                margin-left: 1rem;
                transition: all 0.3s;
            }

                .navbar-landing .nav-link:hover {
                    color: #fff;
                }

            .navbar-landing .btn-login {
                background-color: #43a047;
                border-color: #43a047;
                color: white;
                padding: 0.5rem 1.5rem;
                border-radius: 50px;
                font-weight: 600;
                transition: all 0.3s;
            }

                .navbar-landing .btn-login:hover {
                    background-color: #388e3c;
                    border-color: #388e3c;
                    transform: translateY(-2px);
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                }

        .feature-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 64px;
            height: 64px;
            border-radius: 50%;
            font-size: 28px;
        }

        footer {
            background-color: #2e3538;
            color: #a3aeb5;
            padding: 3rem 0;
        }

            footer a {
                color: #a3aeb5;
                text-decoration: none;
                transition: color 0.3s;
            }

                footer a:hover {
                    color: #fff;
                    text-decoration: none;
                }

            footer .footer-heading {
                color: #fff;
                font-weight: 600;
                margin-bottom: 1.5rem;
            }

            footer ul {
                padding-left: 0;
                list-style: none;
            }

                footer ul li {
                    margin-bottom: 0.75rem;
                }

        .social-icons a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.1);
            margin-right: 0.5rem;
            transition: all 0.3s;
        }

            .social-icons a:hover {
                background-color: #43a047;
                color: #fff;
                transform: translateY(-3px);
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-landing">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("LandingPage", "Home")">AGRI-CONNECT</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-login ms-3" href="@Url.Action("Login", "Account")">Sign In</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <h5 class="footer-heading">AGRI-CONNECT</h5>
                    <p>Your comprehensive solution for agricultural management. Designed with farmers in mind to improve productivity and streamline operations.</p>
                    <div class="social-icons mt-4">
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-twitter"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 mb-4 mb-md-0">
                    <h5 class="footer-heading">Company</h5>
                    <ul>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Careers</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-4 mb-4 mb-md-0">
                    <h5 class="footer-heading">Resources</h5>
                    <ul>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">Documentation</a></li>
                        <li><a href="#">Support Center</a></li>
                        <li><a href="#">FAQs</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 col-md-4">
                    <h5 class="footer-heading">Contact Us</h5>
                    <p><i class="bi bi-geo-alt me-2"></i> 123 Farm Road, Durban, South Africa</p>
                    <p><i class="bi bi-telephone me-2"></i> +27 12 345 6789</p>
                    <p><i class="bi bi-envelope me-2"></i> info@agri-connect.co.za</p>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-12 text-center">
                    <p class="mb-0">&copy; @DateTime.Now.Year AGRI-CONNECT. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>