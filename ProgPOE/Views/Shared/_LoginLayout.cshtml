<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AGRI-CONNECT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProgPOE.styles.css" asp-append-version="true" />
    <!-- Add Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #43a047, #1565c0);
            height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            width: 100%;
            max-width: 420px;
            padding: 15px;
            animation: fadeIn 0.8s ease-in-out;
        }

        .login-card {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

        .login-header {
            text-align: center;
            padding: 30px 20px 20px;
            border-bottom: 1px solid #f0f0f0;
        }

        .logo-container {
            margin-bottom: 15px;
        }

        .logo {
            width: 90px;
            height: 90px;
            border-radius: 50%;
            background-color: #f1f8e9;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            font-size: 40px;
            color: #43a047;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .login-header h2 {
            color: #2e7d32;
            margin-bottom: 5px;
            font-weight: 600;
        }

        .login-header p {
            color: #757575;
            margin-bottom: 0;
        }

        .login-body {
            padding: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                color: #424242;
                font-weight: 500;
                font-size: 14px;
            }

        .input-with-icon {
            position: relative;
        }

        .input-icon {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #757575;
            font-style: normal;
        }

        .form-control {
            height: 48px;
            border-radius: 8px;
            border: 1px solid #e0e0e0;
            padding: 10px 15px;
            font-size: 15px;
            transition: all 0.3s;
        }

            .form-control:focus {
                border-color: #2e7d32;
                box-shadow: 0 0 0 0.2rem rgba(46, 125, 50, 0.15);
            }

        .btn-login {
            width: 100%;
            background-color: #2e7d32;
            border: none;
            color: white;
            font-size: 16px;
            font-weight: 600;
            height: 48px;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s;
        }

            .btn-login:hover, .btn-login:focus {
                background-color: #1b5e20;
                box-shadow: 0 5px 15px rgba(46, 125, 50, 0.3);
            }

        .alert-danger {
            background-color: #ffebee;
            color: #c62828;
            border: none;
            border-radius: 6px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .login-footer {
            padding: 15px 30px;
            text-align: center;
            color: #757575;
            font-size: 13px;
            border-top: 1px solid #f0f0f0;
            background-color: #fafafa;
        }

            .login-footer p {
                margin-bottom: 0;
            }


        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }


        {
            padding: 10px;
        }

        .login-body {
            padding: 20px;
        }

        }
    </style>
</head>
<body>
    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>