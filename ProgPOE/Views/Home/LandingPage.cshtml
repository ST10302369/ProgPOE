@{
    ViewData["Title"] = "Welcome to AGRI-CONNECT";
    Layout = "_LandingLayout";
}

<header class="landing-hero">
    <div class="hero-overlay"></div>
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-white mb-4">AGRI-CONNECT</h1>
                <h2 class="h3 text-white mb-4">Connecting Farmers to Better Management</h2>
                <p class="lead text-white mb-5">Your comprehensive solution for managing agricultural products, tracking inventory, and enhancing farm productivity.</p>
                <div class="d-grid gap-3 d-md-flex">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-success btn-lg px-4 me-md-2">Sign In</a>
                    <button class="btn btn-outline-light btn-lg px-4" onclick="document.getElementById('features').scrollIntoView({behavior: 'smooth'})">Learn More</button>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <img src="https://images.pexels.com/photos/2526677/pexels-photo-2526677.jpeg" alt="AGRI-CONNECT" class="img-fluid rounded shadow-lg">
            </div>
        </div>
    </div>
</header>

<section id="features" class="py-5 bg-light">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">Why Choose AGRI-CONNECT?</h2>
            <p class="lead text-muted">Empowering farmers with digital tools for better agricultural management</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary bg-gradient text-white mb-3">
                            <i class="bi bi-graph-up"></i>
                        </div>
                        <h3 class="h4 mb-3">Product Management</h3>
                        <p>Easily track and manage your agricultural products with our intuitive interface. Add details, categorize, and keep inventory up-to-date.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-success bg-gradient text-white mb-3">
                            <i class="bi bi-bar-chart"></i>
                        </div>
                        <h3 class="h4 mb-3">Data Insights</h3>
                        <p>Get valuable insights about your farm production, track trends, and make informed decisions based on comprehensive data analysis.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-info bg-gradient text-white mb-3">
                            <i class="bi bi-people"></i>
                        </div>
                        <h3 class="h4 mb-3">Employee Portal</h3>
                        <p>Dedicated portal for agricultural officers to assist farmers, track progress, and provide valuable support and resources.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-white">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <img src="https://images.pexels.com/photos/1679457/pexels-photo-1679457.jpeg" alt="Farm Management" class="img-fluid rounded shadow">
            </div>
            <div class="col-lg-6">
                <h2 class="display-6 fw-bold mb-4">Transform Your Farm Management</h2>
                <p class="lead mb-4">AGRI-CONNECT is designed to make agricultural management easier, more efficient, and more productive.</p>
                <ul class="list-unstyled">
                    <li class="mb-3">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        Track all your agricultural products in one place
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        Monitor inventory levels and production dates
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        Organize products by categories for better management
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        Access your farm data from anywhere, anytime
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section id="about" class="py-5 bg-light">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6 order-lg-2 mb-4 mb-lg-0">
                <img src="https://images.pexels.com/photos/2252584/pexels-photo-2252584.jpeg" alt="About AGRI-CONNECT" class="img-fluid rounded shadow">
            </div>
            <div class="col-lg-6 order-lg-1">
                <h2 class="display-6 fw-bold mb-4">About AGRI-CONNECT</h2>
                <p class="lead mb-4">We're dedicated to supporting South African farmers with technology that makes a difference.</p>
                <p>AGRI-CONNECT was founded with a mission to bring modern technology to traditional farming practices. We understand the challenges that farmers face daily and have created a solution that addresses these specific needs.</p>
                <p>Our platform is designed by agricultural experts and software developers who work closely with real farmers to ensure that our tools are practical, useful, and easy to use.</p>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-success text-white">
    <div class="container py-5 text-center">
        <h2 class="display-6 fw-bold mb-4">Ready to Improve Your Farm Management?</h2>
        <p class="lead mb-4">Join thousands of farmers who are already using AGRI-CONNECT to transform their agricultural operations.</p>
        <a href="@Url.Action("Login", "Account")" class="btn btn-light btn-lg px-5">Get Started Today</a>
    </div>
</section>

@section Scripts {
    <script>
        // Optional JavaScript for smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();

                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
}