@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header text-center">
            <div class="logo-container">
                <div class="logo">
                    <i class="bi bi-flower3"></i>
                </div>
            </div>
            <h2 class="text-success">AGRI-CONNECT</h2>
            <p class="text-muted">Sign in to your account</p>
        </div>

        <div class="login-body">
            <form asp-action="Login" method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var modelState in ViewData.ModelState.Values)
                        {
                            foreach (var error in modelState.Errors)
                            {
                                <p>@error.ErrorMessage</p>
                            }
                        }
                    </div>
                }

                <div class="form-group mb-3">
                    <label for="username" class="form-label">Username</label>
                    <div class="input-with-icon">
                        <input type="text" id="username" name="username" class="form-control" required autofocus />
                        <i class="input-icon bi bi-person"></i>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label for="password" class="form-label">Password</label>
                    <div class="input-with-icon">
                        <input type="password" id="password" name="password" class="form-control" required />
                        <i class="input-icon bi bi-lock"></i>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-login">Sign In</button>
                </div>

                <div class="text-center mt-3">
                    <a href="@Url.Action("LandingPage", "Home")" class="text-decoration-none">
                        <i class="bi bi-arrow-left"></i> Back to Home
                    </a>
                </div>
            </form>
        </div>

        <div class="login-footer">
            <p>&copy; 2025 AGRI-CONNECT | Empowering Farmers</p>
        </div>
    </div>
</div>